# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# CUDA files
[*.{cu,cuh}]
indent_size = 4
max_line_length = 100

# C/C++ files
[*.{c,h,cpp,hpp,cc,cxx}]
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Dockerfile
[Dockerfile*]
indent_size = 4

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# Web files
[*.{html,htm,css,scss,sass}]
indent_size = 2

# XML files
[*.{xml,xsl,xslt,svg}]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 4

# GitHub workflow files
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Documentation
[docs/**/*.{md,rst}]
max_line_length = 100
trim_trailing_whitespace = false